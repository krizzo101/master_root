# Hello CLI Environment Configuration
# Copy this file to .env and update with your values

# Logging Configuration
HELLO_CLI_LOG_LEVEL=INFO
HELLO_CLI_LOG_FILE=/var/log/hello-cli/app.log
HELLO_CLI_LOG_FORMAT=json

# Feature Flags
HELLO_CLI_COLOR_OUTPUT=true
HELLO_CLI_UPPERCASE=false
HELLO_CLI_FEATURE_EMOJI=false
HELLO_CLI_FEATURE_ANIMATION=false

# Performance Tuning
HELLO_CLI_MAX_NAME_LENGTH=100
HELLO_CLI_TIMEOUT_SECONDS=30
HELLO_CLI_RETRY_ATTEMPTS=3

# Output Configuration
HELLO_CLI_DEFAULT_NAME=World
HELLO_CLI_DEFAULT_GREETING=Hello
HELLO_CLI_OUTPUT_FORMAT=plain

# Monitoring
HELLO_CLI_METRICS_ENABLED=true
HELLO_CLI_METRICS_PORT=8080
HELLO_CLI_METRICS_PATH=/metrics

# Development Settings (remove in production)
HELLO_CLI_DEBUG=false
HELLO_CLI_TESTING_MODE=false
