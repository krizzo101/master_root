{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start GenFileMap Watcher",
            "type": "shell",
            "command": "python shell_file_watcher.py . --recursive",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Stop GenFileMap Watcher",
            "type": "shell",
            "command": "pkill -f shell_file_watcher.py",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "Check GenFileMap Watcher Status",
            "type": "shell",
            "command": "ps aux | grep shell_file_watcher | grep -v grep",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}