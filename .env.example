# OPSVI Master Workspace Environment Variables
# Copy this file to .env and update with your values

# Application Configuration
OPSVI_APP_NAME=opsvi-master
OPSVI_ENVIRONMENT=development
OPSVI_DEBUG=true
OPSVI_LOG_LEVEL=INFO

# MCP Registry Configuration
MCP_REGISTRY_URL=https://mcp.opsvi.ai
MCP_USERNAME=your_username
MCP_PASSWORD=your_password
MCP_PUBLIC_URL=https://public-mcp.opsvi.ai
MCP_PUBLIC_TOKEN=your_public_token

# MCP Package Configuration
MCP_FS_ROOT_PATH=/home/opsvi/master_root
MCP_FS_ALLOWED_PATHS=/home/opsvi/master_root,/home/opsvi/ACCF
MCP_FS_READ_ONLY=false
MCP_GIT_REPO_PATH=/home/opsvi/master_root
MCP_GIT_BRANCH=main
MCP_GIT_AUTH_TOKEN=your_git_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=global__demo

# Search Configuration
SEARCH_ENGINE=brave
SEARCH_API_KEY=your_search_api_key
SEARCH_BASE_URL=https://api.search.brave.com

# Docker Configuration
DOCKER_REGISTRY=ghcr.io/opsvi
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Development Configuration
PYTHONPATH=/home/opsvi/master_root
UV_CACHE_DIR=/home/opsvi/.cache/uv