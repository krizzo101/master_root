# Autonomous Claude Agent Environment Variables
# Generated: 2025-08-15
# Version: 1.0.0
#
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys
GOOGLE_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AZURE_API_KEY=

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=claude_agent
POSTGRES_USER=agent
POSTGRES_PASSWORD=change_me_in_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change_me_in_production

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8002
CHROMA_TOKEN=change_me_in_production

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4
SERVER_RELOAD=false
SERVER_CORS_ORIGINS=["http://localhost:3000"]

# Security
SECRET_KEY=change_me_to_random_secret_key
JWT_SECRET_KEY=change_me_to_random_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=change_me_to_secure_api_key
ENCRYPTION_KEY=change_me_to_32_byte_key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Resource Limits
MAX_MEMORY_MB=4096
MAX_CPU_PERCENT=80
MAX_DISK_GB=10
MAX_EXECUTION_TIME_SECONDS=3600

# LLM Configuration
DEFAULT_LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-opus-20240229
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT_SECONDS=60

# Agent Configuration
AGENT_MAX_ITERATIONS=100
AGENT_MAX_RETRIES=3
AGENT_CHECKPOINT_INTERVAL=10
AGENT_ENABLE_AUTONOMOUS=true
AGENT_ENABLE_PARALLEL=true

# Tool Configuration
ENABLE_FILE_OPERATIONS=true
ENABLE_CODE_EXECUTION=true
ENABLE_WEB_SEARCH=true
ENABLE_DATABASE_OPS=true
ENABLE_GIT_OPS=true

# MCP Server Configuration
MCP_CLAUDE_CODE_ENABLED=true
MCP_FIRECRAWL_ENABLED=true
MCP_RESEARCH_PAPERS_ENABLED=true
MCP_SHELL_EXEC_ENABLED=true

# Web Search Configuration
BRAVE_API_KEY=
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
SERPER_API_KEY=

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_in_production
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=claude-agent

# Alerting
ALERT_WEBHOOK_URL=
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# File Storage
STORAGE_TYPE=local  # local, s3, azure, gcs
STORAGE_PATH=/data
S3_BUCKET=
S3_REGION=us-east-1
AZURE_CONTAINER=
GCS_BUCKET=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups
BACKUP_S3_BUCKET=

# Feature Flags
FEATURE_CHAIN_OF_THOUGHT=true
FEATURE_SELF_REFLECTION=true
FEATURE_META_LEARNING=true
FEATURE_MULTI_MODAL=false
FEATURE_VOICE_INTERFACE=false

# Development Settings
DEV_MODE=false
DEV_AUTO_RELOAD=false
DEV_MOCK_LLM=false
DEV_DISABLE_AUTH=false
DEV_VERBOSE_LOGGING=false

# Performance Tuning
WORKER_THREADS=4
ASYNC_WORKERS=10
CONNECTION_POOL_SIZE=20
BATCH_SIZE=10
PREFETCH_LIMIT=2

# Sandbox Configuration
SANDBOX_ENABLED=true
SANDBOX_TYPE=docker  # docker, firecracker, gvisor
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_MAX_MEMORY_MB=512
SANDBOX_NETWORK_ENABLED=false

# Jupyter Configuration
JUPYTER_ENABLED=true
JUPYTER_PORT=8888
JUPYTER_TOKEN=change_me_in_production

# Git Configuration
GIT_USER_NAME="Claude Agent"
GIT_USER_EMAIL="claude@opsvi.ai"
GIT_DEFAULT_BRANCH=main
GIT_AUTO_COMMIT=false
GIT_AUTO_PUSH=false

# Compliance and Audit
AUDIT_ENABLED=true
AUDIT_LOG_PATH=/logs/audit.log
AUDIT_RETENTION_DAYS=90
COMPLIANCE_MODE=none  # none, hipaa, gdpr, sox

# Custom Configuration
CUSTOM_PROMPTS_PATH=/app/prompts
CUSTOM_TEMPLATES_PATH=/app/templates
CUSTOM_PLUGINS_PATH=/app/plugins

# Third-party Service URLs
OLLAMA_BASE_URL=http://localhost:11434
LANGSMITH_API_URL=https://api.smith.langchain.com
LANGSMITH_API_KEY=

# Experimental Features
EXPERIMENTAL_ENABLED=false
EXPERIMENTAL_QUANTUM_COMPUTE=false
EXPERIMENTAL_NEURAL_SEARCH=false
EXPERIMENTAL_AUTONOMOUS_GOALS=false