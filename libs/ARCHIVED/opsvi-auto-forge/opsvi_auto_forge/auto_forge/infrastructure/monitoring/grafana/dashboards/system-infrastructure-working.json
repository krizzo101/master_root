{
  "title": "System Infrastructure",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Redis Memory Usage",
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "legendFormat": "Memory Used (MB)"
        }
      ],
      "id": 1,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Redis Connected Clients",
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "Connected Clients"
        }
      ],
      "id": 2,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Redis Commands per Second",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec"
        }
      ],
      "id": 3,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Neo4j Active Connections",
      "targets": [
        {
          "expr": "neo4j_connections_active",
          "legendFormat": "Active Connections"
        }
      ],
      "id": 4,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "graph",
      "title": "Redis Memory Usage Over Time",
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "legendFormat": "Memory Used (MB)"
        },
        {
          "expr": "redis_memory_max_bytes / 1024 / 1024",
          "legendFormat": "Max Memory (MB)"
        }
      ],
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      }
    },
    {
      "type": "graph",
      "title": "Redis Performance",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec"
        },
        {
          "expr": "rate(redis_keyspace_hits_total[5m])",
          "legendFormat": "Cache Hits/sec"
        },
        {
          "expr": "rate(redis_keyspace_misses_total[5m])",
          "legendFormat": "Cache Misses/sec"
        }
      ],
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      }
    },
    {
      "type": "graph",
      "title": "Neo4j Database Metrics",
      "targets": [
        {
          "expr": "neo4j_connections_active",
          "legendFormat": "Active Connections"
        },
        {
          "expr": "neo4j_transactions_active",
          "legendFormat": "Active Transactions"
        },
        {
          "expr": "neo4j_queries_active",
          "legendFormat": "Active Queries"
        }
      ],
      "id": 7,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      }
    },
    {
      "type": "graph",
      "title": "System CPU Usage",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %"
        }
      ],
      "id": 8,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      }
    },
    {
      "type": "graph",
      "title": "System Memory Usage",
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory Usage %"
        }
      ],
      "id": 9,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      }
    },
    {
      "type": "graph",
      "title": "Disk Usage",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100",
          "legendFormat": "Disk Usage %"
        }
      ],
      "id": 10,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      }
    },
    {
      "type": "stat",
      "title": "Service Health Status",
      "targets": [
        {
          "expr": "up{job=\"redis\"}",
          "legendFormat": "Redis"
        },
        {
          "expr": "up{job=\"neo4j\"}",
          "legendFormat": "Neo4j"
        },
        {
          "expr": "up{job=\"api\"}",
          "legendFormat": "API"
        },
        {
          "expr": "up{job=\"celery-workers\"}",
          "legendFormat": "Celery Workers"
        }
      ],
      "id": 11,
      "gridPos": {
        "h": 4,
        "w": 24,
        "x": 0,
        "y": 28
      }
    }
  ],
  "schemaVersion": 38,
  "version": 1,
  "id": 4,
  "uid": "system-infrastructure"
}
