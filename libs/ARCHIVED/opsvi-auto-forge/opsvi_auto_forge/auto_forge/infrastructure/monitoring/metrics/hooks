from __future__ import annotations
import time
from monitoring.metrics.decision_metrics import (
    decision_success, decision_failure, dk_verifier_disagreement_total,
    retrieval_latency, evidence_coverage, cost_per_pass_gate
)

def time_retriever(name: str):
    def decorator(fn):
        def wrapper(*args, **kwargs):
            t0 = time.perf_counter()
            try:
                return fn(*args, **kwargs)
            finally:
                dt = (time.perf_counter() - t0) * 1000.0
                retrieval_latency.labels(retriever=name).observe(dt)
        return wrapper
    return decorator
