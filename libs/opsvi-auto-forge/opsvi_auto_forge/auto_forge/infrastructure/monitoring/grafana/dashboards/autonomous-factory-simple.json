{
  "title": "Autonomous Factory Simple",
  "tags": ["autonomous-factory"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "System Health",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"api\"}",
          "legendFormat": "API"
        },
        {
          "expr": "up{job=\"celery-workers\"}",
          "legendFormat": "Celery Workers"
        },
        {
          "expr": "up{job=\"neo4j\"}",
          "legendFormat": "Neo4j"
        },
        {
          "expr": "up{job=\"redis\"}",
          "legendFormat": "Redis"
        }
      ],
      "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Pipeline Runs",
      "type": "stat",
      "targets": [
        {
          "expr": "autonomous_factory_pipeline_runs_total",
          "legendFormat": "Total Pipeline Runs"
        }
      ],
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 3,
      "title": "Task Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(autonomous_factory_tasks_completed_total{status=\"success\"}[5m]) / rate(autonomous_factory_tasks_completed_total[5m]) * 100",
          "legendFormat": "Success Rate %"
        }
      ],
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 4}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}